<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.f2prateek.foodbot"
          android:versionCode="100"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="16"/>

    <application
            android:name=".FoodBotApplication"
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:debuggable="true">

        <activity
                android:name=".ui.LogActivity"
                android:configChanges="orientation|keyboardHidden|screenSize" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.EntryDetailActivity" android:label="@string/app_name"/>
        <activity android:name=".ui.StatsActivity" android:label="@string/app_name"/>

        <provider
                android:name=".provider.FoodBotContentProvider"
                android:authorities="com.f2prateek.foodbot.provider">
        </provider>
    </application>

</manifest>